<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ãœbersicht"
        android:textSize="@dimen/frag_main_title"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:layout_height="@dimen/underline_medium"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/frag_main_lists_cnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text=":Listen"
        android:textSize="@dimen/frag_main_information_big"
        android:typeface="serif" />

    <TextView
        android:id="@+id/frag_main_todo_cnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=":to do's"
        android:textSize="@dimen/frag_main_information_medium"
        android:typeface="serif" />

    <TextView
        android:id="@+id/frag_main_done_cnt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=":erledigt"
        android:textSize="@dimen/frag_main_information_medium"
        android:typeface="serif" />

